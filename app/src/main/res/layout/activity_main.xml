<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/inviaMessaggio"
        android:layout_width="199dp"
        android:layout_height="200dp"
        android:background="@drawable/round_button"
        android:onClick="inviaMessaggio"
        android:text="MESSAGGIO DI EMERGENZA"
        android:textColor="#000"
        android:textSize="18sp"
        app:backgroundTint="@android:color/holo_red_dark" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/emergenza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMERGENZA DISATTIVA"
        android:textColor = "#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="stopinvio"
        android:textColor = "#000"
        android:text="stop"
        app:backgroundTint="#C14CAF50" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="La tua posizione"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPosizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Posizione GPS"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="78dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:onClick="OpenSecondActivity"
        android:textColor = "#000"
        android:text="@string/Button2"
        app:backgroundTint="@color/teal_200" />


</LinearLayout>